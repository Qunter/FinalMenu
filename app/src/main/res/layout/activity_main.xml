<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.finalmenu.MainActivity">

    <RelativeLayout
        android:id="@+id/menulist"
        android:layout_width="264dp"
        android:layout_height="264dp"
        android:background="@drawable/menu_list_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">
        <com.example.administrator.finalmenu.MenuItem
            android:id="@+id/qiwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp">
        </com.example.administrator.finalmenu.MenuItem>
        <com.example.administrator.finalmenu.MenuItem
            android:id="@+id/qipao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="100dp">
        </com.example.administrator.finalmenu.MenuItem>
        <com.example.administrator.finalmenu.MenuItem
            android:id="@+id/haoyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="165dp">
        </com.example.administrator.finalmenu.MenuItem>
        <com.example.administrator.finalmenu.MenuItem
            android:id="@+id/shezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="195dp">
        </com.example.administrator.finalmenu.MenuItem>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/menuBtn"
        android:layout_width="@dimen/mIconSizeWidth"
        android:layout_height="@dimen/mIconSizeHeight"
        android:background="@drawable/menu_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_plus" />
    </RelativeLayout>
</RelativeLayout>
